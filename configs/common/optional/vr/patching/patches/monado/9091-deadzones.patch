+float
+applyDeadzone(float valueA, float valueB)
+{
+	float deadzone = debug_get_float_option_lh_stick_deadzone();
+ float sqrA = valueA * valueA;
+ float sqrB = valueB * valueB;
+ float combined = sqrA + sqrB;
+	if (combined <= (deadzone * deadzone)) {
+		return 0.0f;
+	}
+
+	return valueA;
+}
